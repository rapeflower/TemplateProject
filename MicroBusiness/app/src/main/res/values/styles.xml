<resources>
    <!-- Base application theme. no thing -->

    <!-- MEditText-->
    <declare-styleable name="MEditText">
        <!--文本框的右边删除图片的样式-->
        <attr name="clear_button_mode">
            <enum name="never" value="0x00000000" /> <!-- 从不出现-->
            <enum name="while_editing" value="0x00000001" /> <!-- 编辑时出现-->
            <enum name="unless_editing" value="0x00000002" /> <!-- 除了编辑外都出现-->
            <enum name="always" value="0x00000003" /> <!--  一直出现-->
        </attr>
    </declare-styleable>

    <!-- CommonDialog -->
    <style name="CommonDialog" parent="android:style/Theme.Holo.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <!--MButton样式-->
    <style name="mbtn_text_red_circular"><!--红色圆角字体样式-->
        <item name="android:textColor">@color/mbtn_style_textcolor_gray_white</item>
    </style>
    <style name="mbtn_text_red_square"><!--红色直角字体样式-->
        <item name="android:textColor">@color/mbtn_style_textcolor_gray_white</item>
    </style>
    <style name="mbtn_text_yellow_square"><!--黄色直角字体样式-->
        <item name="android:textColor">@color/mbtn_style_textcolor_white</item>
    </style>
    <style name="mbtn_text_gray_circular"><!--灰色直角字体样式-->
        <item name="android:textColor">@color/mbtn_style_textcolor_gray</item>
    </style>

